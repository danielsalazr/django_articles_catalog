	* {
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%;
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
}

body {
  width: 100%;
  min-height: 100vh;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
      -ms-flex-direction: column;
          flex-direction: column;
  font-family: "Poppins", sans-serif;
}

.header {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  /* grid-template-columns: auto auto; */
  -webkit-box-pack: justify;
      -ms-flex-pack: justify;
          justify-content: space-between;
  /* height: auto; */
  min-height: 60px;
  height: -webkit-fit-content;
  height: -moz-fit-content;
  height: fit-content;
  color: black;
  background-color: #efefef;
  font-family: "Poppins", sans-serif;
  font-size: 2.8rem;
  font-weight: 500;
  display: flex;
  padding: 10px 20px 10px;
  border-bottom: rgba(17, 16, 29, 0.1411764706) solid 1px;
}
.header__menu {
  display: none;
}
.header__button {
  display: none;
}
.header__checkbox {
  display: none;
}
.header__nav__icon {
  display: none;
}
.header__nav {
  width: 50%;
}
.header__nav.responsive {
  -webkit-transition: display 2s linear;
  transition: display 2s linear;
}
.header__nav li {
  text-align: center;
}
.header__nav ul li a {
  padding: 8px;
  color: #000000;
  text-decoration: none;
  margin-right: 10px;
}
.header__nav ul li:hover {
  color: #007EA7;
  border: 1px solid #00A8E8;
  border-radius: 12px;
}
.header ul {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
      -ms-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
      -ms-flex-pack: justify;
          justify-content: space-between;
}

.main_page {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  font-size: 2.4rem;
  padding: 20px;
}
.main_page p {
  width: 40%;
  text-align: justify;
}
.main_page input {
  display: block;
  border: 1px solid black;
  border-radius: 5px;
  padding: 10px;
  margin-bottom: 10px;
}
.main_page button {
  display: block;
  background-color: #d2d6d8;
  border: 1px solid black;
  border-radius: 7px;
  padding: 10px;
  width: 280px;
  margin: 0 auto;
  margin-bottom: 10px;
}
.main_page a {
  color: #00171F;
  background-color: #fff204;
  border: 1px solid black;
  border-radius: 7px;
  margin-bottom: 10px;
  width: 280px;
  display: inline-block;
  text-align: center;
  padding: 10px;
}
.main_page .search__image {
  width: 400px;
  height: 400px;
  border: 1px solid black;
  border-radius: 7px;
  margin-bottom: 20px;
}
.main_page .article__form {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
      -ms-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
}
.main_page .article__form input {
  margin: 10px 20px;
}
.main_page .button-exit {
  color: #00171F;
  background-color: #fff204;
  border: 1px solid black;
  border-radius: 7px;
  margin-bottom: 10px;
  width: 280px;
}
.main_page .button-search {
  color: white;
  background-color: #003459;
  border-radius: 7px;
  margin-bottom: 10px;
  width: 280px;
}

footer {
  margin-top: auto;
  display: -ms-grid;
  display: grid;
  -ms-grid-columns: auto 7 auto 7 auto;
  grid-template-columns: auto auto auto;
  -webkit-box-pack: justify;
      -ms-flex-pack: justify;
          justify-content: space-between;
  height: 50px;
  background-color: #00171F;
  color: #FFFFFF;
  font-family: "The Nautigal";
  font-size: 1.8rem;
  font-weight: 400;
  font-weight: bold;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  padding: 15px 20px 15px;
  border-bottom: 1px solid #efefef;
  gap: 7;
}

@media screen and (max-width: 768px) {
  .header {
    display: block;
    height: -webkit-fit-content;
    height: -moz-fit-content;
    height: fit-content;
  }
  .header__menu {
    display: block;
    width: 45px;
  }
  .header__nav {
    display: none;
    width: 100%;
    -webkit-transition: visibility 0s, opacity 0.5s linear;
    transition: visibility 0s, opacity 0.5s linear;
  }
  .header__nav.responsive {
    position: relative;
    background-color: rgba(0, 126, 167, 0.1490196078);
    border-radius: 12px;
  }
  .header__nav__icon {
    display: inline-block;
    width: 35px;
    height: 40px;
    position: absolute;
    right: 20px;
    top: 10px;
    padding: 7px;
    background-image: url("../assets/icons/icon_menu.svg");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    z-index: 2;
    -webkit-transition: all 0.5s ease-out;
    transition: all 0.5s ease-out;
  }
  .header__nav__icon:hover {
    border: 1px solid #007EA7;
    border-radius: 7px;
  }
  .header__nav.responsive {
    float: none;
    display: block;
  }
  .header__nav.responsive ul {
    display: block;
    text-align: left;
    width: 100%;
  }
  .header__nav.responsive li {
    width: 100%;
    text-align: center;
  }
  .header__nav.responsive a {
    width: 100%;
    display: inline-block;
    -webkit-transition: all 0.08s linear;
    transition: all 0.08s linear;
  }
  .header__nav.responsive a:hover {
    color: white;
    background-color: #007EA7;
  }
  .header__name {
    display: none;
  }
  .inventory {
    display: -ms-grid;
    display: grid;
    -ms-grid-columns: 1fr;
    grid-template-columns: 1fr;
    grid-auto-rows: 0.6fr 1fr;
    padding: 0px 20px;
    justify-items: center;
  }
  .inventory_fields {
    display: -ms-grid;
    display: grid;
    -ms-grid-columns: 150px 1fr;
    grid-template-columns: 150px 1fr;
    -ms-grid-rows: 1fr 1fr 1fr 1fr 2.2fr;
    grid-template-rows: 1fr 1fr 1fr 1fr 2.2fr;
        grid-template-areas: "t1 i1" "t2 i2" "t3 i3" "button button" "form form";
    place-content: center;
    /* width: 80%; */
    width: 100%;
  }
  .textos:first-of-type {
    grid-area: t1;
  }
  .textos:nth-of-type(2) {
    grid-area: t2;
  }
  .textos:nth-of-type(3) {
    grid-area: t3;
  }
  .camposbc:first-child {
    grid-area: i1;
  }
  .camposbc:nth-of-type(2) {
    grid-area: i2;
  }
  .camposbc:last-of-type {
    grid-area: i3;
  }
  .camposbc {
    width: 80%;
  }
  .buttonSend {
    border: 1px solid black;
    border-radius: 3px;
    background-color: #f8f9fa;
    margin-top: 10px;
    height: 30px;
    width: 100%;
    font-size: 1.8rem;
    grid-area: button;
  }
  .inventory_fields form {
    grid-area: form;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
        -ms-flex-direction: column;
            flex-direction: column;
    width: 100%;
    -webkit-box-align: center;
        -ms-flex-align: center;
            align-items: center;
  }
  .fields-button__download {
    width: 100%;
    margin-top: 16px;
  }
  .inventory_table {
    height: 45vh;
    width: 85vw;
  }
}

@media screen and (max-width: 768px) {
  .textos:first-of-type {
    -ms-grid-row: 1;
    -ms-grid-column: 1;
  }
  .textos:nth-of-type(2) {
    -ms-grid-row: 2;
    -ms-grid-column: 1;
  }
  .textos:nth-of-type(3) {
    -ms-grid-row: 3;
    -ms-grid-column: 1;
  }
  .camposbc:first-child {
    -ms-grid-row: 1;
    -ms-grid-column: 2;
  }
  .camposbc:nth-of-type(2) {
    -ms-grid-row: 2;
    -ms-grid-column: 2;
  }
  .camposbc:last-of-type {
    -ms-grid-row: 3;
    -ms-grid-column: 2;
  }
  .buttonSend {
    -ms-grid-row: 4;
    -ms-grid-column: 1;
    -ms-grid-column-span: 2;
  }
  .inventory_fields form {
    -ms-grid-row: 5;
    -ms-grid-column: 1;
    -ms-grid-column-span: 2;
  }
}
